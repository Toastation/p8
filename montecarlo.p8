cls()
c=0
pi=3.141592
samples=32767
for it=0,samples do
 x=rnd(2)-1
 y=rnd(2)-1
 if (x*x+y*y)<1 then 
 	pset((x+1)*64,(y+1)*64,11)
 	c+=1
 end
end
res=c/samples
res=4*res
err=100*abs(res-pi)/pi
?"pi="..res,30,30,7
?"samples="..samples, 30,40,7
?"error="..err.."%",30,50,7
